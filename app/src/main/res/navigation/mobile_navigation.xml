<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="abdennourboukhris.grp2.findmyfriends.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="abdennourboukhris.grp2.findmyfriends.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="abdennourboukhris.grp2.findmyfriends.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_map"
        android:name="abdennourboukhris.grp2.findmyfriends.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map">

        <argument
            android:name="latitude"
            android:defaultValue="0.0"
            app:argType="float" />
        <argument
            android:name="longitude"
            android:defaultValue="0.0"
            app:argType="float" />
        <argument
            android:name="sender"
            android:defaultValue="Unknown"
            app:argType="string" />

    </fragment>
</navigation>